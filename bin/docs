#!/bin/sh
dash="$(dirname "$(find ~/.emacs.d | grep "/dash.el$" | tail -1)")"
s="$(dirname "$(find ~/.emacs.d | grep "/s.el$" | tail -1)")"

cat <<INFO
════════════════════════════════════════════════════════════════════════════════
 _                             _
| | ___   _ _ __ ___  ___ ___ | | ___  _ __
| |/ / | | | '__/ _ \/ __/ _ \| |/ _ \| '__|
|   <| |_| | | |  __/ (_| (_) | | (_) | |
|_|\_\\__,_|_|  \___|\___\___/|_|\___/|_|

 ____
|  _ \  ___   ___ ___
| | | |/ _ \ / __/ __|
| |_| | (_) | (__\__ \\
|____/ \___/ \___|___/

────────────────────────────────────────────────────────────────────────────────
Required packages present:
Dash: $dash
   S: $s
════════════════════════════════════════════════════════════════════════════════
$(emacs --version)
════════════════════════════════════════════════════════════════════════════════
INFO

emacs --batch \
  -eval "(add-to-list 'load-path \".\")" \
  -eval "(add-to-list 'load-path \"${dash}\")" \
  -eval "(add-to-list 'load-path \"${s}\")" \
  -l s \
  -l ert \
  -l ./etd.el \
  -l ./kurecolor.el \
  -l ./kurecolor-examples.el \
  --eval "(message \"Update README.md\")" \
  --eval "(create-docs-file-for \"kurecolor-examples.el\" \"doc-template\" \"README.md\")" \
  --eval "(message \"Update index.md\")" \
  --eval "(create-docs-file-for \"kurecolor-examples.el\" \"index-template\" \"index.md\")"

echo "
════════════════════════════════════════════════════════════════════════════════"
echo "git diff"
git diff

echo "cat README.md"
cat README.md

echo "cat index.md"
cat index.md

echo "
════════════════════════════════════════════════════════════════════════════════"
