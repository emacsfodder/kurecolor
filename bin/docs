#!/bin/sh

s="$(dirname "$(find ~/.emacs.d | grep "/s.el$" | tail -1)")"

cat <<INFO
════════════════════════════════════════════════════════════════════════════════
 _                             _
| | ___   _ _ __ ___  ___ ___ | | ___  _ __
| |/ / | | | '__/ _ \/ __/ _ \| |/ _ \| '__|
|   <| |_| | | |  __/ (_| (_) | | (_) | |
|_|\_\\__,_|_|  \___|\___\___/|_|\___/|_|

 ____
|  _ \  ___   ___ ___
| | | |/ _ \ / __/ __|
| |_| | (_) | (__\__ \\
|____/ \___/ \___|___/

════════════════════════════════════════════════════════════════════════════════
INFO

emacs --batch \
  -eval "(add-to-list 'load-path \".\")" \
  -eval "(add-to-list 'load-path ${s}\")" \
  -l s \
  -l ert \
  -l ./etd.el \
  -l ./kurecolor.el \
  -l ./kurecolor-examples.el \
  --eval "(create-docs-file-for \"kurecolor-examples.el\" \"doc-template\" \"README.md\")" \
  --eval "(create-docs-file-for \"kurecolor-examples.el\" \"index-template\" \"index.md\")"

echo "
════════════════════════════════════════════════════════════════════════════════"
